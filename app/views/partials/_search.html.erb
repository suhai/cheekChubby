<% if params[:controller] == 'posts' %>
  <%= form_tag(posts_path, :method => "get", id: "search-form", class:"search-form pull-right") do %>
    <div class="form-group">
      <%= text_field_tag :search, params[:search], placeholder: "Search Posts",  class:'form-control' %>
    </div>
    <%= submit_tag "Search", :name => nil, class:'btn btn-primary' %>
  <% end %>
<% elsif params[:controller] == 'categories' %>
  <%= form_tag(categories_path, :method => "get", id: "search-form", class:"search-form pull-right") do %>
    <div class="form-group">
      <%= text_field_tag :search, params[:search], placeholder: "Search Categories",  class:'form-control' %>
    </div>
    <%= submit_tag "Search", :name => nil, class:'btn btn-primary' %>
  <% end %>
<% elsif params[:controller] == 'photos' %>
  <%= form_tag(photos_path, :method => "get", id: "search-form", class:"search-form pull-right") do %>
    <div class="form-group">
      <%= text_field_tag :search, params[:search], placeholder: "Search Photos",  class:'form-control' %>
    </div>
    <%= submit_tag "Search", :name => nil, class:'btn btn-primary' %>
  <% end %>
<% else %>
  <%= form_tag(root_path, :method => "get", id: "search-form", class:"search-form pull-right") do %>
    <div class="form-group">
      <%= text_field_tag :search, params[:search], placeholder: "Search",  class:'form-control' %>
    </div>
    <%= submit_tag "Search", :name => nil, class:'btn btn-primary' %>
  <% end %>
<% end %>





