<div id="user_nav" class="pull-right"> 
  <% if current_user %>
    Logged In as <%= current_user.username %>
    <%= link_to 'Log Out', root_path, class:'btn btn-info' %>
    <% else %>
    <%= link_to 'Log In', admin_login_path %>
  <% end %>
</div>

<h2 class="page-header">Users<%= link_to "Add New User", new_admin_user_path, class:'btn btn-success pull-right' %></h2>
<% if @users.exists? %>
  <table class="table table-striped">
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Date Created</th>
    <th>Actions</th>
  </tr>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.username %></td>
      <td><%= user.email %></td>
      <td><%= user.created_at.to_time.strftime('%B %e at %l:%M %p') %></td>
      <td><%= link_to"Edit", edit_admin_user_path(user), class:'btn btn-primary' %> <%= link_to"Delete", admin_user_path(user), class:'btn btn-danger', method: :delete, data: {confirm: 'Are you sure?'} %></td>
    </tr>
  <% end %>
  </table>
  <%= will_paginate @users %>
<% else %>
  <p>There are no users</p>
<% end %>

