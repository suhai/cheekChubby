<h2 class="page-header"><%= link_to "Add New Post", new_post_path, class:'btn btn-primary pull-right' %></h2>
<div id="posts-index" >
<% if @posts.exists? %>
  <% @posts.each_slice(3) do |post| %>
    <div class="row">
      <% post.each do |post| %>
        <div class="col-md-4">
          <div class="post">
            <%= image_tag post.image.url, width:'100%' %>
            <div class="post-content">
              <h3><%= post.title %></h3>
              <small>Posted by <%= post.user.username %> on <%= post.created_at.to_time.strftime('%B %e at %l:%M %p') %></small>
              <%= raw post.body.truncate(80) %>
              <%= link_to "Read More", post_path(post), class:'btn btn-primary' %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
  <% else %>
    <p>No Posts yet</p>
  <% end %>
</div>

